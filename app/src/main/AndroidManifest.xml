<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.melroy.lokavidya">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NavigationDrawer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewOnlineVideoActivity"
            android:label="@string/title_activity_view_online_video"
            android:parentActivityName=".NavigationDrawer"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.melroy.lokavidya.NavigationDrawer" />
        </activity>
        <activity
            android:name=".EditingModuleActivity"
            android:label="@string/title_activity_editing_module"
            android:parentActivityName=".NavigationDrawer"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.melroy.lokavidya.NavigationDrawer" />
        </activity>
    </application>

</manifest>
